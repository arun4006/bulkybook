@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}




<div class="container p-3">
    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Category List</h2>
       </div>
       <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>&nbsp; Create New Category
        </a>
       </div>
    </div>
    <br/>
<h1 style="text-align:center">Index Category</h1>


<table class="table table-bordered table-hover" style="width:100%">
    <thead style="color:aquamarine"> 
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody >
        @foreach (var data in Model)
        {
            <tr>
                <td style="width:50%">@data.Name</td>
                <td style="width:30%">@data.DisplayOrder</td>
                <td> 
                  <div class="w-75 btn-group" role="group" >
                      <a asp-controller="Category" asp-action="Edit" asp-route-id="@data.Id"
                      class="btn btn-primary mx-3"> 
                          <i class="bi bi-pencil-square"></i> Edit
                          </a>
                 
                      <a asp-controller="Category" asp-action="Delete" asp-route-id="@data.Id"
                      class="btn btn-danger mx-3"> 
                          <i class="bi bi-trash-fill"></i> Delete
                          </a>
                  </div>
                </td>
            </tr>
        }
    </tbody>
</table>  
</div>